        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<!--Carusel end-->

<!-- Headline-->
<div class="container">
    <div class="col-lg-12">
        <div id="content">
            <h3>Registration</h3>
            <hr>
        </div>
    </div>
</div>
<div class="container">
    <form action="/save" method="post">
        <div class="form-group">
            <label for="name">ID:</label>
            <input type="text" class="form-control" id="pwd" placeholder="Enter ID" name="ID" required>
        </div>
        <% if (errors.ID) { %>
            <div class="alert alert-danger" role="alert"><%- errors.ID %></div>
        <% } %>
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" id="name" placeholder="Enter Name" name="name" required>
        </div>
        <% if (errors.name) { %>
            <div class="alert alert-danger" role="alert"><%- errors.name %></div>
        <% } %>
        <div class="form-group">
            <label for="name">Last Name:</label>
            <input type="text" class="form-control" id="name" placeholder="Enter Last name" name="lastName" required>
        </div>
        <% if (errors.lastname) { %>
            <div class="alert alert-danger" role="alert"><%- errors.lastName %></div>
        <% } %>
        <div class="form-group">
            <label for="name">Student ID:</label>
            <input type="text" class="form-control" id="pwd" placeholder="Enter student ID" name="studentID" >
        </div>
        <label for="img">Select student image:</label>
        <input type="file" id="img" name="img" accept="image/*">
        <% if (errors.studentID) { %>
            <div class="alert alert-danger" role="alert"><%- errors.studentID %></div>
        <% } %>
        <div class="form-group">
            <label for="name">User name:</label>
            <input type="text" class="form-control" id="name" placeholder="Enter user name" name="username" required>
        </div>
        <% if (errors.username) { %>
            <div class="alert alert-danger" role="alert"><%- errors.username %></div>
        <% } %>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="pwd" placeholder="Enter Password" name="password" required>
        </div>
        <% if (errors.password) { %>
            <div class="alert alert-danger" role="alert"><%- errors.password %></div>
        <% } %>
        <div class="form-group">
            <label for="name">Whatâ€™s your favorite fruit:</label>
            <input type="text" class="form-control" id="name" placeholder="Enter your password recovery answer" name="ans" required>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>




<!--End paragraph-->
<p id="endPar">All rights reserved SuperSami 2020</p>


